<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VerificarUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.VerificarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdicionarUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.AdicionarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.ExcluirUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.AlterarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarSenhaUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.AlterarSenhaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IncluirCliente</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.IncluirCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>novoPedido</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.novoPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisualizarUsuario</servlet-name>
        <servlet-class>br.sp.senac.programeros.actions.VisualizarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificarUsuario</servlet-name>
        <url-pattern>/VerificarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdicionarUsuario</servlet-name>
        <url-pattern>/AdicionarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirUsuario</servlet-name>
        <url-pattern>/ExcluirUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarUsuario</servlet-name>
        <url-pattern>/AlterarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarSenhaUsuario</servlet-name>
        <url-pattern>/AlterarSenhaUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarCliente</servlet-name>
        <url-pattern>/cadastrarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>novoPedido</servlet-name>
        <url-pattern>/compra.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisualizarUsuario</servlet-name>
        <url-pattern>/VisualizarUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
